let row;let col
let size =40

function setup() {
  noLoop();
  createCanvas(600, 600);
  row = height/size;
  col = width/size;
  board = []
  
}

    
   

function draw(){
  background(0);
    for (let r=0;r<row;r++){
      for (var c=0;c<col;c++){
       rect(c*size, r*size, size,size)
        
      }
    }
}

function mousePressed() {
  xlocation = mouseX/40 /// this how far left/right
  ylocation = mouseY/40 /// this is how far up and down
  fill(100); 
  rect((Math.floor(xlocation))*40 , (Math.floor(ylocation))*40,40,40);
}

