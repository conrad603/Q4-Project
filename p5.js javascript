/// board sets us where the mines are and board tf setups what has been clicked
/// when clicked x,y make that cell from a 0 to a 1 on boardtf to show that it has been clicked, the show that cell and display how many mines are around it
  

    


function draw(){
  background(0);
    for (let r=0;r<row;r++){
      for (var c=0;c<col;c++){
       rect(c*size, r*size, size,size)
        
      }
    }
}

function mousePressed() {
  drawboard()
  xlocation = mouseX/40 /// this how far left/right
  ylocation = mouseY/40 /// this is how far up and down
  fill(100); 
  rect((Math.floor(xlocation))*40 , (Math.floor(ylocation))*40,40,40);
}

function mine(){ /// mine generator  
  
}

function drawboard(){
  xlocation = Math.floor(mouseX/40)
  ylocation = Math.floor(mouseY/40)
  boardtf[ylocation][xlocation] = 1
  console.log(boardtf)

}
